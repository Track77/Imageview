{
    "manifest_version": 2,
    "name": "Attachment Viewer Enhanced",
    "description": "Viewing images in attachments as full size or thumbnail",
    "version": "2.9.4",
    "author": "opto (Klaus Buecher)",
    "developer": {
        "name": "opto (Klaus Buecher)"
    },
 
    "icons": {
		"32": "/skin/iconmonstr-paperclip-6-32.png"
	},


    "permissions": [
        "messagesRead",
        "storage",
        "management",
        "downloads",
        "tabs"
	  ],
    
    "applications": {
        "gecko": {
            "id": "webmaster@3d-kstudio.com",
            "strict_min_version": "115.0",
            "strict_max_version": "140.*"
        }
    },
    


    "background": {
        "page": "im-background.html"
    },

    "message_display_action": {
        "default_title": "Img-View",
        "default_icon": {
             "32": "skin/iconmonstr-picture-10-32.png"
              }

    },

 

    "browser_action": {
        "default_title": "Office-View",
        "browser_style": true,
        "default_icon": {
            "32": "skin/iconmonstr-paperclip-8-32.png"
              }
     },

    "experiment_apis": {
        "Utilities": {
            "schema": "api/Utilities/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["Utilities"]],
                "script": "api/Utilities/implementation.js"
            }
        },
        "ex_customui": {
          "schema": "api/customui/api.json",
          "parent": {
            "scopes": ["addon_parent"],
            "paths": [["ex_customui"]],
            "script": "api/customui/parent.js"
          },
          "child": {
            "scopes": ["addon_child"],
            "paths": [["ex_customui"]],
            "script": "api/customui/child.js"
          }
        }        
    }
}
                                                                                                                                                        
